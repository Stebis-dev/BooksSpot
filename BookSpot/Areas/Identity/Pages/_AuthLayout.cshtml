@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card ">
            <div class="card-header">
                <ul class=" nav nav-tab nav-fill">
                    <li class="nav-item" >
                        <a class="nav-link active" href='/Identity/Account/Register'><h4>Sign up</h4></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Login'><h4>Sign in</h4></a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @RenderSection("Scripts", required: false)
}
